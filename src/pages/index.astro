---
import Layout from "@/layouts/Layout.astro";
import DesignPrinciples from "@/components/design/DesignPrinciples";
import CustomCursor from "@/components/CustomCursor";
import Footer from "@/components/Footer.astro";
import AnimatedTitle from "@/components/AnimatedTitle";

const projects = [
  {
    title: "Square",
    date: "WIP",
    image: "/images/homepage/square.png",
    url: "/work/square",
  },
  {
    title: "Square Charge",
    date: "Created 11.24",
    image: "/images/homepage/squarecharge.png",
    url: "/work/square-charge",
  },
  {
    title: "eBay Today",
    date: "Created 11.24",
    image: "/images/homepage/ebay.png",
    url: "/work/ebay-today",
  },
  {
    title: "Motivmo",
    date: "Created 11.24",
    image: "/images/homepage/motivmo.png",
    url: "/work/motivmo",
  },
  {
    title: "Project Five",
    date: "Created 11.24",
    image: "/images/homepage/bazaar.png",
    url: "/work/bazaar",
  },
  {
    title: "Project Six",
    date: "Created 11.24",
    image: "/images/homepage/demobuddy.png",
    url: "/work/project-six",
  },
];
---

<Layout title="Home | My Portfolio">
  <CustomCursor client:load />
  <main class="custom-cursor-area max-w-[1500px] mx-auto px-4">
    <!-- Hero Section -->
    <header class="h-[55vh] mb-6 mt-6">
      <div class="w-full h-full max-w-[1500px] font-light mx-auto flex items-center">
        <AnimatedTitle 
          client:only="react"
          text="Ben Krogh is a product [BR] design leader who still [BR] loves to make things."
          isHomepage={true}
        />
      </div>
    </header>

    <!-- Projects Grid -->
    <section
      class="project-grid-area grid grid-cols-1 md:grid-cols-2 gap-6 mb-6"
    >
      {
        projects.map((project) => (
          <a
            href={project.url}
            data-project
            data-title={project.title}
            data-date={project.date}
            class="block relative group"
          >
            <div
              class={`
                relative overflow-hidden rounded-[24px] bg-gradient-to-br ${project.gradient} 
                w-full pb-[90%] flex items-center justify-center
                transition-transform duration-300 ease-out
                hover:scale-[1.02] focus:scale-[1.02]
              `}
            >
              <img
                src={project.image}
                alt={project.title}
                class="absolute inset-0 w-full h-full object-cover
                transition-transform duration-500 ease-out
                hover:scale-[1.02] group-hover:scale-[1.02]"
              />
              <div class={`absolute inset-0 bg-gradient-to-br ${project.gradient} opacity-10`} />
            </div>
          </a>
        ))
      }
    </section>

    <!-- Design Principles Section -->
    <DesignPrinciples client:load />
  </main>

  <!-- Footer -->
  <Footer />
</Layout>

<style>
  /* Override global cursor only in the custom cursor area */
  .custom-cursor-area {
    cursor: none !important;
  }

  .custom-cursor-area #custom-cursor {
    display: none !important;
  }

  /* Ensure all interactive elements within maintain the custom cursor */
  .custom-cursor-area a,
  .custom-cursor-area button {
    cursor: none !important;
  }

  /* Reset cursor for touch devices */
  @media (hover: none) {
    .custom-cursor-area,
    .custom-cursor-area a,
    .custom-cursor-area button {
      cursor: auto !important;
    }
  }
</style>
