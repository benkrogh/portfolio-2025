---
import Layout from './Layout.astro';
import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
  title: string;
  date: string;
  author: string;
}>;

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="w-full max-w-[1500px] mx-auto px-4 py-8">
    <div class="bg-[#EC6A5C] rounded-[32px] p-8 sm:p-12 w-full">
      <h1 class="text-5xl mb-2">{frontmatter.title}</h1>
      <div class="text-2xl opacity-50">
        <span>{frontmatter.date}</span>
      </div>
    </div>
    <div class="prose prose-lg mx-auto max-w-[700px]]">
      <slot />
    </div>
  </article>
</Layout>

<style>
	html,
	body {
		margin: 0;
		background-color: #FCFAF7;
		width: 100%;
		height: 100%;
	}
</style>